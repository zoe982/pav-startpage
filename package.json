{
  "name": "pavinfo-start",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler pages dev dist --d1=DB --r2=ASSETS_BUCKET --port=8788",
    "build": "tsc -b && vite build",
    "preview": "wrangler pages dev dist --d1=DB --r2=ASSETS_BUCKET",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "lint:semgrep": "semgrep scan --config auto src/ functions/",
    "typecheck": "tsc --noEmit -p tsconfig.app.json && tsc --noEmit -p tsconfig.functions.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run tests/api tests/functions",
    "test:ui": "vitest run tests/pages tests/components tests/App.test.tsx",
    "test:guard": "rg -n \"\\b(?:it|test|describe)\\.(?:only|skip)\\b|\\bx(?:it|test|describe)\\b\" tests src functions && { echo 'Focused or skipped tests are not allowed in production workflows.'; exit 1; } || true",
    "test:ci": "pnpm test:integration && pnpm test:ui && pnpm test:coverage",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "wrangler d1 execute pavinfo-start-db --local --file=migrations/0001_initial_schema.sql",
    "verify:production": "pnpm lint:fix && pnpm lint && pnpm typecheck && pnpm lint:semgrep && pnpm test:guard && pnpm test:ci",
    "predeploy": "pnpm verify:production",
    "deploy": "pnpm build && git push && wrangler pages deploy dist --branch=production"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@uiw/react-md-editor": "^4.0.11",
    "diff": "^8.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-router": "^7.13.0",
    "rehype-highlight": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.18",
    "jose": "^6.1.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260214.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "msw": "^2.12.10",
    "semgrep": "^0.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.65.0"
  }
}
